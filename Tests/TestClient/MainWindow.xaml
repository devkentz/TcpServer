<Window x:Class="TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Client" Height="846" Width="1100"
        MinWidth="850" MinHeight="600">

    <Window.Resources>
        <Storyboard x:Key="ToastFadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetName="ToastLabel"
                             Storyboard.TargetProperty="Opacity"
                             From="0.85" To="0" Duration="0:0:2"
                             BeginTime="0:0:1"/>
            <!-- 1초 후 시작 -->
        </Storyboard>
    </Window.Resources>

    <Grid Margin="10">
        <!-- 2단 레이아웃: 패킷 관리 (왼쪽) / 로그 (오른쪽) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <!-- 패킷 관리 -->
            <ColumnDefinition Width="6*"/>
            <!-- 로그 -->
        </Grid.ColumnDefinitions>

        <!-- 상단 네트워크 설정 / 하단 메인 UI -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 네트워크 설정 -->
            <RowDefinition Height="*"/>
            <!-- 메인 콘텐츠 -->
        </Grid.RowDefinitions>

        <!-- 🌐 네트워크 설정 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    HorizontalAlignment="Center" Margin="0,5">
            <TextBox x:Name="IpTextBox" Width="150" Text="IP 입력" Margin="5"/>
            <TextBox x:Name="PortTextBox" Width="100" Text="PORT 입력" Margin="5"/>
            <Button x:Name="ConnectBtn" Content="🌐 Connect" Click="Connect_Click"
                    Width="120" Height="35" Margin="5"/>

            <ComboBox x:Name="PlatformCodeBox" Width="120" Margin="10,0" Height="30"/>
            <ComboBox x:Name="RegionCodeBox" Width="120" Margin="10,0" Height="30"/>
            <TextBox x:Name="PlatformUidTextBox" Width="150" Text="PUID 입력" Margin="5"/>
            <Button Content="🔑 Login" Click="Button_Click"
                    Width="120" Height="35" Margin="5"/>
        </StackPanel>

        <!-- 📜 패킷 관리 패널 (왼쪽) -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- USER -->
                <RowDefinition Height="Auto"/>
                <!-- 패킷 목록 -->
                <RowDefinition Height="Auto"/>
                <!-- 패킷 데이터 -->
                <RowDefinition Height="Auto"/>
                <!-- 치트 코드 -->
                <RowDefinition Height="*"/>
                <!-- 전송 버튼 + 반복 전송 -->
            </Grid.RowDefinitions>

            <!-- USER -->
            <GroupBox Margin="5" Header="USER" Grid.Row="0">
                <RichTextBox x:Name="UserInfoTextBox" HorizontalAlignment="Stretch" Height="99" Margin="0,10,0,0" Padding="5"/>
            </GroupBox>

            <!-- 패킷 목록 -->
            <GroupBox Header="📜 패킷 목록" Margin="5" Grid.Row="1">
                <ComboBox x:Name="PacketListBox" Height="30"
                          IsEditable="True" IsTextSearchEnabled="True" SelectionChanged="ComboBox_SelectionChanged"
                          StaysOpenOnEdit="True"
                          HorizontalAlignment="Stretch"/>
            </GroupBox>

            <!-- 패킷 데이터 -->
            <GroupBox Header="✏️ 패킷 데이터" Margin="5" Grid.Row="2">
                <RichTextBox x:Name="PacketEditTextBox" Height="250" Padding="5"
                             HorizontalAlignment="Stretch"/>
            </GroupBox>

            <!-- 전송 버튼 + 반복 전송 -->
            <Grid Margin="10" HorizontalAlignment="Center" Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 전송 버튼 -->
                <Button x:Name="Send" Content="📤 전송 (Send)" Click="Send_Click"
                        Width="180" Height="45" Margin="5" Grid.Row="0"/>

                <!-- 반복 전송 UI -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0" Grid.Row="1">
                    <StackPanel Margin="5">
                        <TextBlock Text="횟수" HorizontalAlignment="Center"/>
                        <TextBox x:Name="RepeatCountBox" Width="50" Text="1"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="간격(ms)" HorizontalAlignment="Center"/>
                        <TextBox x:Name="RepeatIntervalBox" Width="70" Text="1000"/>
                    </StackPanel>

                    <Button x:Name="RepeatSendButton" Content="⏲️ 반복 전송" Width="100" Height="35" Margin="5"
                            Click="RepeatSend_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 📝 로그 패널 (오른쪽) -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <GroupBox Header="📝 로그" Margin="5">
                <StackPanel>
                    <RichTextBox x:Name="LogTextBox" Height="550"
                                 VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                    <Button Content="🧹 로그 클리어" Click="ClearLog_Click"
                            Width="120" Height="35" Margin="5" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Label x:Name="ToastLabel"
               Content=""
               Background="Black"
               Foreground="White"
               FontSize="16"
               Padding="10"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Visibility="Collapsed"
               Opacity="0.85"
               BorderBrush="Gray"
               BorderThickness="1"
               Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

    </Grid>

</Window>
    
