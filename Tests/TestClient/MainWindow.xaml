<Window x:Class="TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Network Test Client"
        Height="900" Width="1400"
        MinWidth="1000" MinHeight="700"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- 다크 테마 스타일 -->
        <Style x:Key="DarkGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="Background" Value="#252526"/>
        </Style>

        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1177BB"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D5A8C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="ToastFadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetName="ToastLabel"
                             Storyboard.TargetProperty="Opacity"
                             From="0.95" To="0" Duration="0:0:1.5"
                             BeginTime="0:0:1"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 툴바 -->
        <Border Grid.Row="0" Background="#2D2D30" CornerRadius="5" Padding="15,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 연결 설정 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Server:" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="IpTextBox" Width="140" Text="127.0.0.1" Style="{StaticResource DarkTextBox}" Margin="0,0,5,0"/>
                    <TextBox x:Name="PortTextBox" Width="70" Text="9000" Style="{StaticResource DarkTextBox}" Margin="0,0,10,0"/>
                    <Button x:Name="ConnectBtn" Content="Connect" Click="Connect_Click" Style="{StaticResource AccentButton}" Width="100"/>
                </StackPanel>

                <!-- 로그인 설정 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Platform:" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="PlatformCodeBox" Width="100" Margin="0,0,10,0"/>
                    <ComboBox x:Name="RegionCodeBox" Width="80" Margin="0,0,10,0"/>
                    <TextBox x:Name="PlatformUidTextBox" Width="120" Text="test_user" Style="{StaticResource DarkTextBox}" Margin="0,0,10,0"/>
                    <Button Content="Login" Click="Button_Click" Style="{StaticResource SecondaryButton}" Width="80"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450" MinWidth="350"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 패널: 패킷 관리 -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 유저 정보 -->
                    <Border Grid.Row="0" Background="#2D2D30" CornerRadius="3" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="USER INFO" Foreground="#569CD6" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <RichTextBox x:Name="UserInfoTextBox" Height="70"
                                         Background="#1E1E1E" Foreground="#CCCCCC"
                                         BorderBrush="#3C3C3C" Padding="5"/>
                        </StackPanel>
                    </Border>

                    <!-- 패킷 선택 -->
                    <Border Grid.Row="1" Background="#2D2D30" CornerRadius="3" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="PACKET SELECT" Foreground="#569CD6" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ComboBox x:Name="PacketListBox" Height="32"
                                      IsEditable="True" IsTextSearchEnabled="True"
                                      SelectionChanged="ComboBox_SelectionChanged"
                                      StaysOpenOnEdit="True"/>
                        </StackPanel>
                    </Border>

                    <!-- Monaco Editor -->
                    <Border Grid.Row="2" Background="#2D2D30" CornerRadius="3" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="PACKET DATA (JSON)" Foreground="#569CD6" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#3C3C3C" BorderThickness="1" CornerRadius="3">
                                <wv2:WebView2 x:Name="MonacoEditor" MinHeight="300"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- 전송 버튼 -->
                    <Border Grid.Row="3" Background="#2D2D30" CornerRadius="3" Padding="15">
                        <StackPanel>
                            <Button x:Name="Send" Content="Send Request" Click="Send_Click"
                                    Style="{StaticResource AccentButton}"
                                    FontSize="14" Height="40" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Count" Foreground="#888" FontSize="11" Margin="0,0,0,3"/>
                                    <TextBox x:Name="RepeatCountBox" Text="1" Style="{StaticResource DarkTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="Interval (ms)" Foreground="#888" FontSize="11" Margin="0,0,0,3"/>
                                    <TextBox x:Name="RepeatIntervalBox" Text="1000" Style="{StaticResource DarkTextBox}"/>
                                </StackPanel>

                                <Button Grid.Column="2" x:Name="RepeatSendButton" Content="Repeat"
                                        Click="RepeatSend_Click" Style="{StaticResource SecondaryButton}"
                                        VerticalAlignment="Bottom" Width="70"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                          Background="#3C3C3C" Cursor="SizeWE"/>

            <!-- 오른쪽 패널: 로그 -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="RESPONSE LOG" Foreground="#569CD6" FontWeight="SemiBold"
                                   VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock x:Name="LogCountLabel" Text="" Foreground="#666"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- 로그 영역 -->
                    <Border Grid.Row="1" BorderBrush="#3C3C3C" BorderThickness="1" CornerRadius="3">
                        <RichTextBox x:Name="LogTextBox"
                                     Background="#1E1E1E" Foreground="#CCCCCC"
                                     BorderThickness="0" Padding="10"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"/>
                    </Border>

                    <!-- 하단 버튼 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Clear Log" Click="ClearLog_Click" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Toast 알림 -->
        <Border x:Name="ToastLabel"
                Background="#323232"
                BorderBrush="#569CD6"
                BorderThickness="1"
                CornerRadius="5"
                Padding="20,12"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,30"
                Visibility="Collapsed"
                Opacity="0.95"
                Grid.Row="1">
            <TextBlock x:Name="ToastText" Text="" Foreground="White" FontSize="14"/>
        </Border>
    </Grid>
</Window>
