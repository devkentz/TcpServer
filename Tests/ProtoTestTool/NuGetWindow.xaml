<ui:UiWindow x:Class="ProtoTestTool.NuGetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
        Title="NuGet Package Manager" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- TitleBar -->
            <RowDefinition Height="Auto"/> <!-- Search -->
            <RowDefinition Height="*"/>    <!-- Results -->
            <RowDefinition Height="Auto"/> <!-- Status -->
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="NuGet Package Manager"/>

        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ui:TextBox x:Name="SearchBox" PlaceholderText="Search for packages (e.g. Newtonsoft.Json)" KeyDown="SearchBox_KeyDown"/>
            <ui:Button x:Name="SearchBtn" Grid.Column="1" Content="Search" Icon="Search24" Click="SearchBtn_Click" Margin="10,0,0,0"/>
        </Grid>

        <ListView x:Name="ResultList" Grid.Row="2" Margin="20,0,20,20" Background="Transparent" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#1E1E1E" CornerRadius="8" Padding="15" Margin="0,0,0,10" BorderBrush="#333333" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Id}" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <Border Background="#007ACC" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Version}" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}" TextTrimming="CharacterEllipsis" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0" MaxHeight="40"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Authors}" FontSize="12" Foreground="#888888"/>
                                    <TextBlock Text=" â€¢ " Foreground="#555555"/>
                                    <TextBlock Text="{Binding BuildDownloads}" FontSize="12" Foreground="#888888"/>
                                    <TextBlock Text=" downloads" FontSize="12" Foreground="#888888"/>
                                </StackPanel>
                            </StackPanel>

                            <ui:Button Grid.Column="1" Content="Install" Icon="ArrowDownload24" Click="InstallBtn_Click" Tag="{Binding}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Grid Grid.Row="3" Background="#2D2D2D">
            <TextBlock x:Name="StatusText" Text="Ready" Margin="15,5" Foreground="#AAAAAA" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</ui:UiWindow>
