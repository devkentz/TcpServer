<Window x:Class="ProtoTestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:roslyn="clr-namespace:RoslynPad.Editor;assembly=RoslynPad.Editor.Windows"
        mc:Ignorable="d"
        Title="TCP Packet Lab" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Grid Background="{StaticResource BgBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- 1. Top Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="0,0,0,1">
            <DockPanel LastChildFill="False">
                <TextBlock Text="TCP Packet Lab" Foreground="{StaticResource HeaderTextBrush}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>
                
                <!-- Mode Switcher -->
                <StackPanel Orientation="Horizontal" Margin="50,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Mode:" Foreground="{StaticResource SmallTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <RadioButton Content="Test Client" IsChecked="True" Click="ModeClient_Click" Width="100"/>
                    <RadioButton Content="Reverse Proxy" Click="ModeProxy_Click" Width="110" Margin="5,0"/>
                    <RadioButton Content="Script Editor" Click="ModeEditor_Click" Width="110"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                    <TextBlock Text="âš¡ Hot Reload" Foreground="{StaticResource SuccessBrush}" FontSize="10"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 2. Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource BgBrush}" BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <!-- Codec Config -->
                <GroupBox Header="ðŸ“¦ Codec Configuration">
                    <StackPanel>
                        <TextBlock Text="Protobuf v3" Foreground="{StaticResource PrimaryTextBrush}" Margin="2"/>
                         <TextBlock Text="âœ“ Auto-load" Foreground="{StaticResource SmallTextBrush}" FontSize="10" Margin="2"/>
                        <Button x:Name="LoadProtoFolderBtn" Content="Load Folder" Margin="0,5" Click="LoadProtoFolderBtn_Click"/>
                        <Button x:Name="ReloadProtoBtn" Content="Reload" Click="ReloadProtoBtn_Click"/>
                        <!-- Hidden Proto Buttons mapped to Codec area -->
                        <Button x:Name="LoadProtoFileBtn_Client" Visibility="Collapsed" Click="LoadProtoFileBtn_Click"/> 
                         <Button x:Name="LoadProtoFolderBtn_Client" Visibility="Collapsed" Click="LoadProtoFolderBtn_Click"/>
                         <ListBox x:Name="ProtoFileListBox" Height="100" Margin="0,5" Visibility="Collapsed"/> 
                         <ListBox x:Name="ProtoMessageListBox" Visibility="Collapsed"/>
                         <TextBox x:Name="ProtoLogBox" Visibility="Collapsed"/>
                         <!-- We use ProtoFileListBox mainly for logic, keep it but hidden or visible on demand? -->
                    </StackPanel>
                </GroupBox>

                <!-- Scripts -->
                <GroupBox Header="ðŸŽ¯ Scripts" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="âœ“ PacketRegistry" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="âœ“ PacketSerializer" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="âœ“ PacketHandler" Foreground="{StaticResource PrimaryTextBrush}"/>
                         <TextBlock Text="âœ“ Headers" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <Button Content="Edit Scripts" Margin="0,10" Click="ModeEditor_Click"/>
                    </StackPanel>
                </GroupBox>

                 <!-- Metrics (Placeholder) -->
                <GroupBox Header="ðŸ“Š Metrics" Margin="0,15,0,0">
                     <StackPanel>
                        <TextBlock Text="Throughput: 0 pkt/s" Foreground="{StaticResource SuccessBrush}"/>
                    </StackPanel>
                </GroupBox>
                
                 <!-- State Store -->
                 <GroupBox Header="ðŸ’¾ State Store" Margin="0,15,0,0">
                     <StackPanel>
                         <Button Content="Reset State" Click="ResetState_Click"/> 
                     </StackPanel>
                 </GroupBox>
            </StackPanel>
        </Border>

        <!-- 3. Main Content -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="20">
            
            <!-- VIEW 1: Test Client -->
            <Grid x:Name="ClientView">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Connection -->
                    <RowDefinition Height="Auto"/> <!-- Pipeline -->
                    <RowDefinition Height="*"/>    <!-- Inspector/Stream -->
                    <RowDefinition Height="150"/>  <!-- Logs -->
                </Grid.RowDefinitions>

                <!-- Connection Panel -->
                <Border Style="{StaticResource PanelStyle}" Padding="15" Margin="0,0,0,15">
                     <DockPanel>
                         <TextBlock Text="Connection" FontWeight="Bold" Foreground="{StaticResource HeaderTextBrush}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                         
                         <TextBlock Text="Target:" VerticalAlignment="Center" Foreground="{StaticResource SmallTextBrush}"/>
                         <TextBox x:Name="IpBox" Text="127.0.0.1" Width="120" Margin="5,0"/>
                         <TextBlock Text=":" VerticalAlignment="Center"/>
                         <TextBox x:Name="PortBox" Text="9000" Width="60" Margin="5,0"/>
                         
                         <Button x:Name="ConnectBtn" Content="Connect" Click="ConnectBtn_Click" Width="80" Margin="10,0"/>
                         <Button x:Name="DisconnectBtn" Content="Disconnect" Click="DisconnectBtn_Click" Width="80" IsEnabled="False"/>

                         <TextBlock x:Name="ConnectionStatusText" Text="Ready" DockPanel.Dock="Right" VerticalAlignment="Center" Foreground="{StaticResource SuccessBrush}"/>
                     </DockPanel>
                </Border>

                <!-- Packet Selection & Action (Merged into Connection or separate) -->
                <Border Grid.Row="1" Style="{StaticResource PanelStyle}" Padding="15" Margin="0,0,0,15">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto"/>
                             <ColumnDefinition Width="15"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="Auto"/>
                         </Grid.ColumnDefinitions>
                         
                         <!-- Packet Selector (Replaces ListBox) -->
                         <StackPanel Grid.Column="0">
                             <TextBlock Text="Select Packet Type:" Foreground="{StaticResource SmallTextBrush}" Margin="0,0,0,5"/>
                             <ComboBox x:Name="PacketListBox" Width="250" SelectionChanged="PacketListBox_SelectionChanged" DisplayMemberPath="Name"/>
                         </StackPanel>
                         
                         <!-- Interceptor Pipeline Visualization (Placeholder) -->
                         <StackPanel Grid.Column="2" VerticalAlignment="Center">
                              <TextBlock Text="Pipeline: Message -> Headers -> Interceptor -> Serialize" Foreground="{StaticResource SmallTextBrush}"/>
                         </StackPanel>

                         <!-- Send Button -->
                         <Button x:Name="SendBtn" Grid.Column="3" Content="Send Packet ðŸš€" Width="120" Height="40" Background="{StaticResource AccentBrush}" Click="SendBtn_Click" IsEnabled="False"/>
                     </Grid>
                </Border>

                <!-- Split: Inspector and Logs -->
                <Grid Grid.Row="2">
                     <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="*"/>
                         <ColumnDefinition Width="10"/>
                         <ColumnDefinition Width="*"/>
                     </Grid.ColumnDefinitions>
                     
                     <!-- Request Inspector -->
                     <GroupBox Header="Request Inspector">
                         <TabControl>
                             <TabItem Header="Body (JSON)">
                                 <TextBox x:Name="JsonEditor" AcceptsReturn="True" FontFamily="Consolas" VerticalScrollBarVisibility="Auto" Background="{StaticResource InputBrush}" Foreground="{StaticResource PrimaryTextBrush}" BorderThickness="0"/>
                             </TabItem>
                             <TabItem Header="Headers (C#)">
                                 <roslyn:RoslynCodeEditor x:Name="HeaderScriptEditor" FontFamily="Consolas" FontSize="12" ShowLineNumbers="True" Background="White" Foreground="Black"/>
                             </TabItem>
                             <TabItem Header="Proto Source">
                                 <roslyn:RoslynCodeEditor x:Name="ProtoSourceViewer" IsReadOnly="True" FontFamily="Consolas" FontSize="12" ShowLineNumbers="True" Background="White" Foreground="Black"/>
                             </TabItem>
                         </TabControl>
                     </GroupBox>

                     <!-- Response Inspector -->
                     <GroupBox Header="Response Inspector" Grid.Column="2">
                         <TabControl>
                             <TabItem Header="Body (JSON)">
                                 <TextBox x:Name="ResponseBox" IsReadOnly="True" FontFamily="Consolas" VerticalScrollBarVisibility="Auto" Background="{StaticResource InputBrush}" Foreground="{StaticResource PrimaryTextBrush}" BorderThickness="0"/>
                             </TabItem>
                             <TabItem Header="Headers">
                                 <DataGrid x:Name="ResponseHeaderGrid" AutoGenerateColumns="False" IsReadOnly="True">
                                     <DataGrid.Columns>
                                         <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="*"/>
                                         <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                     </DataGrid.Columns>
                                 </DataGrid>
                             </TabItem>
                         </TabControl>
                     </GroupBox>
                </Grid>

                <!-- System Logs (Bottom of Client View) -->
                <GroupBox Header="System Logs" Grid.Row="3" Margin="0,15,0,0">
                    <RichTextBox x:Name="LogBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Background="{StaticResource InputBrush}" Foreground="{StaticResource SmallTextBrush}" BorderThickness="0"/>
                </GroupBox>
            </Grid>

            <!-- VIEW 2: Reverse Proxy -->
            <Grid x:Name="ProxyView" Visibility="Collapsed">
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                 </Grid.RowDefinitions>
                 
                 <GroupBox Header="Proxy Configuration">
                     <StackPanel Orientation="Horizontal" Margin="5">
                         <TextBlock Text="Local Port:" VerticalAlignment="Center" Margin="5"/>
                         <TextBox x:Name="ProxyLocalPortBox" Text="9000" Width="60"/>
                         <TextBlock Text="Target:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                         <TextBox x:Name="ProxyTargetIpBox" Text="127.0.0.1" Width="120"/>
                         <TextBlock Text=":" VerticalAlignment="Center"/>
                         <TextBox x:Name="ProxyTargetPortBox" Text="9001" Width="60"/>
                         <Button x:Name="ProxyStartBtn" Content="Start Proxy" Margin="20,0,0,0" Click="ProxyStartBtn_Click"/>
                     </StackPanel>
                 </GroupBox>

                 <Grid Grid.Row="1" Margin="0,10,0,0">
                      <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="200"/>
                          <ColumnDefinition Width="*"/>
                      </Grid.ColumnDefinitions>
                      <GroupBox Header="Interceptors">
                          <ListBox x:Name="InterceptorListBox"/>
                      </GroupBox>
                      <GroupBox Header="Proxy Logs" Grid.Column="1">
                          <TextBox x:Name="ProxyLogBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Background="{StaticResource InputBrush}" Foreground="{StaticResource SmallTextBrush}"/>
                      </GroupBox>
                 </Grid>
            </Grid>

            <!-- VIEW 3: Editor -->
            <Grid x:Name="EditorView" Visibility="Collapsed">
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                     <RowDefinition Height="5"/>
                     <RowDefinition Height="150"/>
                 </Grid.RowDefinitions>
                 
                 <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                      <Button x:Name="CompileScriptBtn" Content="Compile &amp; Hot Replacements" Click="CompileScriptBtn_Click"/>
                 </DockPanel>

                 <!-- Editor Tabs -->
                 <TabControl x:Name="MethodTabs" Grid.Row="1">
                      <TabItem Header="Packet Registry (.csx)">
                          <roslyn:RoslynCodeEditor x:Name="RegistryEditor" FontFamily="Consolas" FontSize="14" ShowLineNumbers="True" Background="White" Foreground="Black"/>
                      </TabItem>
                      <TabItem Header="Packet Serializer (.csx)">
                           <roslyn:RoslynCodeEditor x:Name="SerializerEditor" FontFamily="Consolas" FontSize="14" ShowLineNumbers="True" Background="White" Foreground="Black"/>
                      </TabItem>
                      <TabItem Header="Packet Handler (.csx)">
                           <roslyn:RoslynCodeEditor x:Name="ContextEditor" FontFamily="Consolas" FontSize="14" ShowLineNumbers="True" Background="White" Foreground="Black"/>
                      </TabItem>
                 </TabControl>
                 
                 <!-- Splitter -->
                 <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#444" ShowsPreview="True"/>

                 <!-- Script Logs -->
                 <GroupBox Header="Build &amp; Script Logs" Grid.Row="3" Margin="0,0,0,0">
                    <TextBox x:Name="ScriptLogBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" Background="{StaticResource InputBrush}" Foreground="{StaticResource SuccessBrush}" FontFamily="Consolas"/>
                 </GroupBox>
            </Grid>
        </Grid>

        <!-- 4. Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="0,1,0,0">
            <DockPanel LastChildFill="False" Margin="10,0">
                <TextBlock Text="Ready" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center"/>
                <TextBlock x:Name="ResponseStatusText" Text="" DockPanel.Dock="Right" VerticalAlignment="Center" Foreground="{StaticResource SmallTextBrush}"/>
            </DockPanel>
        </Border>


    </Grid>
</Window>