<ui:UiWindow x:Class="ProtoTestTool.WorkspaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
        Title="ProtoTestTool Launcher"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- TitleBar -->
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 0. Title Bar (Custom, No Buttons) -->
        <Border Grid.Row="0" Height="30" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <TextBlock Text="ProtoTestTool Launcher" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Border>

        <!-- 1. Header -->
        <StackPanel Grid.Row="1" Margin="25,10,25,20">
            <TextBlock Text="Select Workspace" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            <TextBlock Text="Choose a workspace folder to load your protocol definitions and scripts." FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 2. Main Content -->
        <Grid Grid.Row="2" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <!-- Recent List -->
            <ui:Card Grid.Column="0" Margin="0,0,15,0" Padding="0" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Recent Workspaces" Margin="15,12" FontWeight="Bold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    
                    <ListBox x:Name="RecentListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" MouseDoubleClick="RecentListBox_MouseDoubleClick" KeyDown="RecentListBox_KeyDown" Margin="5" VerticalAlignment="Top">
                         <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon Symbol="Folder24" FontSize="18" Foreground="{DynamicResource PaletteBlueBrush}" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Name}" Grid.Row="0" FontWeight="SemiBold" FontSize="15" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Path}" Grid.Row="1" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Path}" Margin="28,2,0,0"/>
                                </Grid>
                            </DataTemplate>
                         </ListBox.ItemTemplate>
                    </ListBox>
                 </Grid>
            </ui:Card>

            <!-- Actions -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <ui:Card MouseLeftButtonUp="NewBtn_Click" Margin="0,0,0,10" Cursor="Hand">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <ui:SymbolIcon Symbol="AddSquare24" FontSize="24" Foreground="{DynamicResource SystemFillColorSuccessBrush}"/>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                             <TextBlock Text="Create New" FontWeight="Bold" FontSize="14"/>
                             <TextBlock Text="Start fresh in a new folder" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>
                
                <ui:Card MouseLeftButtonUp="OpenBtn_Click" Cursor="Hand">
                     <StackPanel Orientation="Horizontal" Margin="5">
                        <ui:SymbolIcon Symbol="FolderOpen24" FontSize="24" Foreground="{DynamicResource SystemFillColorCautionBrush}"/>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                             <TextBlock Text="Open Existing" FontWeight="Bold" FontSize="14"/>
                             <TextBlock Text="Browse for a workspace" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <ui:InfoBar Title="Tip" Message="Double-click a recent item to open it immediately." Severity="Informational" IsOpen="True" IsClosable="False" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 3. Footer -->
        <Border Grid.Row="3" Margin="0,20,0,0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" Padding="20,15">
             <DockPanel>
                  <TextBlock Text="v1.0.0" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                  <ui:Button x:Name="ExitBtn" Content="Exit Application" Width="140" HorizontalAlignment="Right" DockPanel.Dock="Right" Click="ExitBtn_Click" Appearance="Secondary" Icon="SignOut24"/>
             </DockPanel>
        </Border>
    </Grid>
</ui:UiWindow>
